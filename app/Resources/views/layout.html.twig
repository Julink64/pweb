<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
 
    <title>{% block title %}Pweb{% endblock %}</title>
 
    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />
    {% endblock %}
  </head>
  <body>
    <div class="container">
      <div id="header" class="hero-unit">
        <h1>Outil de vente en ligne</h1>
        <p>Application Symfony 2 : Outil de vente en ligne</p>
        <p><a class="btn btn-primary btn-large" href="{{ path('PwebMain_espaceclient') }}">
          Se connecter »</a></p>
                                        <!--
                                        <div style="float:left">gauche</div>
                                        <div style="float:right">droite</div>
                                        <div style="clear:both">suite</div>
                                        -->
        </div>
            
            
            
            
            
            
            
      <div class="row">
    <div id="menu" class="span3">
        <a href="{{ path('PwebMain_espaceclient') }}" class="btn">
        <i class="icon-chevron-right"></i>
          Espace client
        </a>
        <br></br>
        <a href="{{ path('PwebMain_panier') }}" class="btn">
        <i class="icon-chevron-right"></i>
          Mon panier
        </a>
            <h3>Le site</h3>
          <ul class="nav nav-pills nav-stacked">
            <li><a href="{{ path('PwebMain_accueil') }}">Accueil</a></li>
            <li><a href="{{ path('PwebMain_ajouter') }}">Ajouter un produit</a></li>
            <li><a href="{{ path('PwebMain_reinitialiser') }}">Ajouter les produits par défaut</a></li>
          </ul>
                     
          {{ render(controller("PwebMainBundle:Main:menu", {'nombre': 3})) }}
        </div>
        <div id="content" class="span9">
          {% block body %}
          {% endblock %}
        </div>
      </div>
 
            

      <hr>
 
      <footer>
        <p>All rights reserved © 2013</p>
      </footer>
    </div>
 
  {% block javascripts %}
    {# Ajoutez ces lignes JavaScript si vous comptez vous servir des fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
  {% endblock %}
 
  </body>
</html>