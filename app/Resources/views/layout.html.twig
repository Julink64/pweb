<!DOCTYPE html>
<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <title>{% block title %}Pweb{% endblock %}</title>
 
    {% block stylesheets %}
      <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" type="text/css" />
    {% endblock %}
    <script src="/js-global/FancyZoom.js" type="text/javascript"></script>
    <script src="/js-global/FancyZoomHTML.js" type="text/javascript"></script>
  </head>
  <body>
    <div class="container">
      <div id="header" class="hero-unit">
        <h1>Outil de vente en ligne</h1>
        <p>Application Symfony 2 : Outil de vente en ligne</p>

        
        
{% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('PwebMain_accueil') }}" class="btn btn-inverse btn-large"><i class="icon-white icon-home"></i></a>
    <a href="{{ path('PwebMain_deconnecter') }}" class="btn btn-success btn-large"><i class="icon-white icon-resize-full"></i> Déconnection</a>
    <a href="{{ path('PwebMain_profileuser') }}" class="btn btn-success btn-large"><i class="icon-white icon-user"></i> Profile</a>
    <a href="{{ path('PwebMain_categoriesgerer') }}" class="btn btn-info btn-large"><i class="icon-white icon-th-list"></i> Catégories</a>
    <a href="{{ path('PwebMain_statut') }}" class="btn btn-info btn-large"><i class="icon-white icon-pencil"></i> Gérer les commandes</a>
    <a href="{{ path('PwebMain_ajouter') }}" class="btn btn-info btn-large"><i class="icon-white icon-pencil"></i> Ajouter</a>
{% elseif is_granted('ROLE_USER') %}
    <a href="{{ path('PwebMain_accueil') }}" class="btn btn-inverse btn-large"><i class="icon-white icon-home"></i></a>
    <a href="{{ path('PwebMain_deconnecter') }}" class="btn btn-success btn-large"><i class="icon-white icon-resize-full"></i> Se déconnecter</a>
    <a href="{{ path('PwebMain_profileuser') }}" class="btn btn-success btn-large"><i class="icon-white icon-user"></i> Profile</a>
    <a href="{{ path('PwebMain_espaceclient') }}" class="btn btn-success btn-large"><i class="icon-white icon-star-empty"></i> Espace client</a>
    <a href="{{ path('PwebMain_panier') }}" class="btn btn-info btn-large"><i class="icon-white icon-shopping-cart"></i> Mon panier</a>
    <a href="{{ path('PwebMain_coordonnees') }}" class="btn btn-info btn-large"><i class="icon-white icon-shopping-cart"></i> Ajouter mes coordonnées</a>
{% else %}
    <a href="{{ path('PwebMain_accueil') }}" class="btn btn-inverse btn-large"><i class="icon-white icon-home"></i></a>
    <a href="{{ path('PwebMain_connecter') }}" class="btn btn-success btn-large"><i class="icon-white icon-resize-small"></i> Se connecter</a>
    <a href="{{ path('PwebMain_enregistrer') }}" class="btn btn-success btn-large"><i class="icon-white icon-user"></i> Pas encore inscrit ?</a>
{% endif %}
        


    

    


      </div>
      <div class="row">
    <div id="menu" class="span3">


        
        
        
        
        


{% if is_granted('ROLE_ADMIN') %}
    <h3>Administrateur</h3>
    <ul class="nav nav-pills nav-stacked">
        <li><a href="{{ path('PwebMain_ajouter') }}">Ajouter un produit</a></li>
        <li><a href="{{ path('PwebMain_initialiseproduits') }}">Ajouter produits par défaut</a></li>
        <li><a href="{{ path('PwebMain_initialisecategories') }}">Ajouter catégories par défaut</a></li>
        <li><a href="{{ path('PwebMain_categoriesgerer') }}">Gérer les catégories</a></li>
        <li><a href="{{ path('PwebMain_statut') }}">Modifier le statut des commandes</a></li>
        <li><a href="{{ path('PwebMain_initialiseclear') }}">Tout nettoyer</a></li>
    </ul>
{% elseif is_granted('ROLE_USER') %}
    <h3>Espace client</h3>
    <ul class="nav nav-pills nav-stacked">
        <li><a href="{{ path('PwebMain_espaceclient') }}">Mes commandes</a></li>
        <li><a href="{{ path('PwebMain_panier') }}">Mon panier</a></li>
        <li><a href="{{ path('PwebMain_profileuser') }}">Mon profile</a></li>
        <li><a href="{{ path('PwebMain_deconnecter') }}">Déconnection</a></li>
    </ul>
{% else %}
    <a href="{{ path('PwebMain_connecter') }}" class="btn btn-primary btn-mini"><i class="icon-white icon-user"></i>Non connecté</a>
{% endif %}

 
    
    
    
    
    
    
    
    
    
{{ render(controller("PwebMainBundle:Main:menu", {'nombre': 3})) }}
        

</div>
        <div id="content" class="span9">
          {% block body %}
          {% endblock %}
        </div>
      </div>
      <hr>
      <footer>
        <p>All rights reserved © 2013</p>
      </footer>
    </div>
 
  {% block javascripts %}
    {# Fonctionnalités du bootstrap Twitter #}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
    <script type="text/javascript" src="{{ asset('js/bootstrap.js') }}"></script>
  {% endblock %}
 
  </body>
</html>

