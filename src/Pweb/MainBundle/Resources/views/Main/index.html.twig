{% extends "PwebMainBundle::layout.html.twig" %}
 
{% block title %}
  Accueil
{% endblock %}
 
{% block PwebMain_body %}
 
  <h2>Liste des produits</h2>
 <br></br>
  <ul>
    {% for article in articles %}
      <li>
        <a href="{{ path('PwebMain_voir', {'id': article.id}) }}">{{ article.titre }}</a>
        par {{ article.auteur }},
        le {{ article.date|date('d/m/Y') }}
      </li>
    {% else %}
      <li>Pas (encore !) de produits</li>
    {% endfor %}
  </ul>
 
{% endblock %}