{# src/Pweb/MainBundle/Resources/views/Main/voir.html.twig #}
 
{% extends "PwebMainBundle::layout.html.twig" %}
 
{% block title %}
    Lecture d'un article - {{ parent() }}
{% endblock %}
 
{% block PwebMain_body %}
 
  <h2>
  {# On vérifie qu'une image soit bien associée à l'article #}
  {% if article.image is not null %}
    <img src="{{ article.image.url }}" alt="{{ article.image.alt }}" />
  {% endif %}
 
    {{ article.titre }}
  </h2>
  <i>Par {{ article.auteur }}, le {{ article.date|date('d/m/Y') }}</i>
 
  <div class="well">
    {{ article.contenu }}
  </div>
 
  <p>
    <a href="{{ path('PwebMain_accueil') }}" class="btn">
      <i class="icon-chevron-left"></i>
      Retour à la liste
    </a>
    <a href="{{ path('PwebMain_modifier', {'id': article.id}) }}" class="btn">
      <i class="icon-edit"></i>
      Modifier l'article
    </a>
    <a href="{{ path('PwebMain_supprimer', {'id': article.id}) }}" class="btn">
      <i class="icon-trash"></i>
      Supprimer l'article
    </a>
  </p>

{% endblock %}